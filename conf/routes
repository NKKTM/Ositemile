# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           controllers.Application.index()

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)

# ログイン・ログアウト
GET		/login						controllers.Application.login()
GET		/authenticate				controllers.Application.authenticate()
GET		/authenticateSuccess		controllers.Application.authenticateSuccess()
GET		/logout						controllers.Application.logout()


# 新規登録
GET		/register					controllers.Application.register()
GET		/registerDB					controllers.Application.registerDB()


# 商品ページ
GET		/introduction				controllers.Application.introduction()
GET		/commentCreate				controllers.Application.commentCreate()

# POST
GET		/postSearchItem				controllers.Application.postSearchItem()
GET     /postInput                  controllers.Application.postInput()
GET     /postCreate                 controllers.Application.postCreate()

#ユーザーページ
GET    /userPage                    controllers.Application.userPage()

#管理者
GET		/loginloginlogin/:username/:password	controllers.AdminApplication.managerAdd(username:String,password:String)
POST	/adminLogin						controllers.AdminApplication.login()
GET		/adminLogin						controllers.AdminApplication.login()
POST	/authenticate				controllers.AdminApplication.authenticate()
GET     /logout						controllers.AdminApplication.logout()
GET		/admin						controllers.AdminApplication.admin()

GET		/postSearch						controllers.AdminApplication.postSearch()
GET		/postList						controllers.AdminApplication.postList()